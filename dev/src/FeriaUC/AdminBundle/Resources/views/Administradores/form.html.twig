<div class="form-group">
	<label for="nombre">Nombre (*)</label>
	<input type="text" id="nombre" name="nombre" class="form-control {% if errores.nombre %} is-invalid {% endif %}" 
	value="{{ valores.nombre }}" placeholder="Ingrese el nombre">
	{% if errores.nombre %}
			<div class="invalid-feedback">
					{{ errores.nombre }}
			</div>
	{% endif %}                    
</div>
<div class="form-group">
	<label for="apellidos">Apellidos</label>
	<input type="text" id="apellidos" name="apellidos" class="form-control" value="{{ valores.apellidos }}" 
	placeholder="Ingrese los apellidos">                    
</div>
<div class="form-group">
	<label for="email">Email (*)</label>
	<input type="text" id="email" name="username" class="form-control {% if errores.email %} is-invalid {% endif %}" value="{{ valores.email }}" placeholder="Ingrese el email" {{ readonly_email  ? "readonly": "" }}>
	{% if errores.email %}
			<div class="invalid-feedback">
					{{ errores.email }}
			</div>
	{% endif %}  
</div>
