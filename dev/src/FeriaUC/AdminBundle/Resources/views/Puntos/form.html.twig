<div class="form-row">
	<div class="form-group col-md-4">
	  <label for="inputEmail4">Tipo de punto (*)</label>
	  <select class="form-control {% if errores.id_tipo_punto %} is-invalid {% endif %}" id="id_tipo_punto" name="id_tipo_punto">
		<option value="">Seleccionar</option>
		{% for tipo in oTiposPunto %}
			<option value="{{ tipo.id }}"{{ valores.id_tipo_punto == tipo.id ? "selected":"" }}>
				{{ tipo.nombre }}
			</option>
		{% endfor %}
		</select>
		{% if errores.id_tipo_punto %}
			<div class="invalid-feedback">
			  {{ errores.id_tipo_punto }}
			</div>
	 {% endif %}
	</div>
	<div class="form-group col-md-4">
	  <label for="nombre">Titulo (*)</label>
	  <input type="text" id="titulo" name="titulo" class="form-control {% if errores.titulo %} is-invalid {% endif %}" 
		 value="{{ valores.titulo }}" placeholder="Ingrese el titulo">
	   {% if errores.titulo %}
		 <div class="invalid-feedback">
		   {{ errores.titulo }}
		 </div>
	   {% endif %}
	</div>
	<div class="form-group col-md-4">
	  <label for="nombre">Subtitulo</label>
	  <input type="text" id="subtitulo" name="subtitulo" class="form-control" 
	 value="{{ valores.subtitulo }}" placeholder="Ingrese el subtitulo">
	</div>
</div>
<div class="form-row">
 	<div class="form-group col-md-3">
	    <label for="tipo">Dirección (*)</label>
		<select class="form-control {% if errores.direccion %} is-invalid {% endif %}" id="direccion" name="direccion">
			<option value="">Seleccionar</option>
			<option value="left"{{ valores.direccion == 'left' ? "selected":"" }}>izquierda</option>
			<option value="right"{{ valores.direccion == 'right' ? "selected":"" }}>derecha</option>
		</select>
		{% if errores.direccion %}
			<div class="invalid-feedback">
			  {{ errores.direccion }}
			</div>
	     {% endif %}
	</div>
	<div class="form-group col-md-3">
	   <label for="tipo">Left (*)</label>
	   <input type="number" id="letf" name="left" class="form-control {% if errores.left %} is-invalid {% endif %}" 
	   value="{{ valores.left }}" placeholder="Ingrese el letf" min="0" max="100">
		{% if errores.left %}
			<div class="invalid-feedback">
			  {{ errores.left }}
			</div>
	 {% endif %}
	</div>
	<div class="form-group col-md-3">
	   <label for="tipo">Top (*)</label>
	   <input type="number" id="top" name="top" class="form-control {% if errores.top %} is-invalid {% endif %}" 
	   value="{{ valores.top }}" placeholder="Ingrese el top" min="0" max="100">
		{% if errores.top %}
			<div class="invalid-feedback">
			  {{ errores.top }}
			</div>
	 {% endif %}
	</div>
	<div class="form-group col-md-3">
	   <label for="tipo">Slug o keyword (*)</label>
	   <input type="text" id="slug" name="slug" class="form-control {% if errores.slug %} is-invalid {% endif %}" 
	   value="{{ valores.slug }}" placeholder="Ingrese el keyword">
		{% if errores.slug %}
			<div class="invalid-feedback">
			  {{ errores.slug }}
			</div>
	 {% endif %}
	</div>
 </div>

