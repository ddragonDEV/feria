{% for chat in aChats %}	
<!-- Chat link -->
<a class="text-reset nav-link p-0 mb-6" onclick="cargarMensajesNovato(this);return false;" data-nombre="{{ chat.nombre }}" data-avatar="{{chat.avatar}}" data-usuario="{{ chat.idUsuario }}" href="#">
	<div class="card card-active-listener">
		<div class="card-body">
			<div class="media">
				<div class="avatar mr-5">
					<img class="avatar-img" src="{{ asset('bundles/app/chat/images/avatars/' ~ chat.avatar ) }}" alt="Bootstrap Themes">
				</div>                                                
				<div class="media-body overflow-hidden">
					<div class="d-flex align-items-center mb-1">
						<h6 class="text-truncate mb-0 mr-auto">{{ chat.nombre }}</h6>
					</div>
					{# <div class="text-truncate">Anna Bridges: Hey, Maher! How are you? The weather is great isn't it?</div> #} {# ira ? por ahora no #}
				</div>
			</div>
		</div>
		{% if chat.sin_responder > 0 %}
		<div class="badge badge-circle badge-primary badge-border-light badge-top-right">
			<span>{{chat.sin_responder}}</span> 
		</div>
		{% endif %}
	</div>
</a>
{% endfor %}