														  'January'  : 'Enero',
														  'February' : 'Febrero',
														  'March'    : 'Marzo',
														  'April'    :  'Abril',
														  'May'      :  'Mayo',
														  'June'     :  'Junio',
														  'July'     :  'Julio',
														  'August'   :  'Agosto',
														  'September':  'Septiembre',
														  'October'  :  'Octubre',
														  'November' :  'Noviembre',
														  'December' : 'Diciembre',
														})  }}
						</h4>
						<div class="bloque-horario">
							{# <div class="slider_holder slider--charlas"> #}
