									   <div class="hora">
											<div>
												<div class="numero get--bl-hora">{{ contenido.hora }}</div>
											</div>
										</div>
										  <div class="charla {{ contenido.class_charla }}">
										    <div class="dato">
										    	<div class="titulo">{{ contenido.stand|upper }}</div>
										    </div>
											<div class="dato">
												<div class="titulo">Charla</div>
												<div class="explicacion"><span class="get--ch-nombre">{{ contenido.titulo }}</span></div>
											</div>
											<div class="dato">
												<div class="titulo">Relator</div>
												<div class="explicacion"><span class="get--ch-relator">{{ contenido.expositor }}</span></div>
											</div>
											{# <div class="dato">
												<div class="titulo">Hora</div>
												<div class="explicacion"><span class="get--ch-hora">12:15</span></div>
											</div> #}
