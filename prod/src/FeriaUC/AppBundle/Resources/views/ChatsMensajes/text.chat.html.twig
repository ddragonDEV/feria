{% for mensaje in arrChatsMensajes %}

	{% if mensaje.estado == 'enviado' %}
		
		<div class="media w-50 mb-3"><img src="https://res.cloudinary.com/mhmd/image/upload/v1564960395/avatar_usae7z.svg" alt="user" width="50" class="rounded-circle">
			<div class="media-body ml-3">
				<div class="bg-light rounded py-2 px-3 mb-2">
					<p class="text-small mb-0 text-muted">{{ mensaje.texto }}</p>
				</div>
				<p class="small text-muted">{{ mensaje.fecha.date|date('H:i A') }} | {{ mensaje.fecha.date|date('M d') }}</p>
			</div>
		</div>
	{% elseif  mensaje.estado == 'respondido' %}

		<div class="media w-50 ml-auto mb-3">
			<div class="media-body">
				<div class="bg-primary rounded py-2 px-3 mb-2">
					<p class="text-small mb-0 text-white">{{ mensaje.texto }}</p>
				</div>
				<p class="small text-muted">{{ mensaje.fecha.date|date('H:i A') }} | {{ mensaje.fecha.date|date('M d') }}</p>
			</div>
		</div>  
	{% endif %}
{% endfor %}